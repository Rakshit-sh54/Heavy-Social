{{#section 'head'}}
<link rel="stylesheet" type="text/css" href="CSS/style.css" />
{{/section}}


<div class="header">
    <div class="wrapper">
        <img src="images/logo.png" width=160 height=70 class="logoletter" />
        <form action="/login" method="post" class="loginuser">
            <table id="login">
                <tr style="height: 20px">
                    <td><label for="email">Email</label> </td>
                    <td><label for="logpassword">Password</label></td>
                    <td rowspan=3><input type="submit" value="Log In" id="loginbutton"></td>
                </tr>

                <tr>
                    <td><input type="text" id="email" class="inputtext" name="loginEmail" required /></td>
                    <td><input type="password" id="logpassword" class="inputtext" name="loginPassword" required /></td>
                </tr>

                <tr style="height: 20px">
                    <td></td>
                    <td><a href="" style="color:#303030;text-decoration:none;padding-top: 3px;">Forgot password?</a>
                    </td>
                </tr>
            </table>

        </form>
    </div>
</div>

<div class="main">
    <div class="wrapper">
        <img src="images/logowhite.png" class="logopic" />

        <div class="signup">
            <h1>Join us today!!</h1>

            <form action="/signup" method="post">
                <table id="signuptable">
                    <tr>
                        <td><label for="fname">First Name:</label></td>
                        <td><input type="text" id="fname" class="inputtext2" name="fname" required /></td>
                    </tr>

                    <tr>
                        <td><label for="lname">Last Name:</label></td>
                        <td><input type="text" id="lname" class="inputtext2" name="lname" required /></td>
                    </tr>

                    <tr>
                        <td><label for="emailadd"> Email:</label></td>
                        <td><input type="email" id="emailadd" class="inputtext2" name="emailid" required /></td>
                    </tr>

                    <tr>
                        <td><label for="pwd">Password:</label></td>
                        <td><input type="password" id="pwd" class="inputtext2" name="pwd" required /></td>
                    </tr>

                    <tr id="joinbut">
                        <td colspan=2 style="padding-left:40px;padding-right: 0px"><input id="joinnowbttn" type="submit"
                                value="Join now" /></td>
                    </tr>

                </table>
            </form>
        </div>
    </div>
</div>

<div class="footer">
    <div class="wrapper">
        <div class="foot">

            <ul>
                <li><a href="about">About</a></li>
                <li><a href="Contact">Contact</a></li>
                <li><a href="">Privacy and Policy</a></li>
                <li><a href="">Help</a></li>
            </ul>

        </div>
    </div>
</div>